<h1>Google Campaigns list</h1>

<% if @selected_account.nil? %>
  <div class="notice">No account selected!</div>

<% else %>

  <% if @campaigns.nil? or @campaigns.empty? %>
    <ul><li>No campaigns available.</ul>
  <% else %>
    <ul><li>Total number of campaigns: <%= @campaign_count %></ul>
    <table>
      <tr>
        <th>ID
        <th>Name
        <th>Status
    <% @campaigns.each do |id, campaign| %>
      <tr>
        <td><%= campaign.id %>
        <td><%= campaign.name %>
        <td><%= campaign.status %>
        <td><%= link_to 'Ad Groups', ad_groups_path(campaign.id) %></td>
        <td><%= link_to 'Destroy', campaign_path(campaign.id), method: :delete, data: { confirm: 'Are you sure?' }  %></td>
    <% end %>
    </table>
  <% end %>

<% end %>

<h1>Facebook Campaigns list</h1>

<% if @fb_campaigns.nil? or @fb_campaigns.empty? %>
  <ul><li>No campaigns available.</ul>
<% else %>
  <ul><li>Total number of campaigns: <%= @fb_campaigns.count %></ul>
  <table>
    <tr>
      <th>ID
      <th>Name
      <th>Status
  <% @fb_campaigns.each do |campaign| %>
    <tr>
      <td><%= campaign.id %>
      <td><%= campaign.name %>
      <td><%= campaign.status %>
      <td><%= link_to 'Ad Groups', ad_groups_path(campaign.id) %></td>
      <td><%= link_to 'Destroy', campaign_path(campaign.id), method: :delete, data: { confirm: 'Are you sure?' }  %></td>
  <% end %>
  </table>
<% end %>

<br>

<%= link_to 'New Campaign', new_campaign_path %>

<div id="local-footer">
  <span class="small-print"><%= link_to("Back to home", home_index_path) %></span>
</div>
