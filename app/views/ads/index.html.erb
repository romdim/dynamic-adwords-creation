<p id="notice"><%= notice %></p>

<h1>Ads</h1>

<table>
  <thead>
    <tr>
      <th>Ad group</th>
      <th>Headline part1</th>
      <th>Headline part2</th>
      <th>Description</th>
      <th>Final urls</th>
      <th>Path1</th>
      <th>Path2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.ad_group_id %></td>
        <td><%= ad.headline_part1 %></td>
        <td><%= ad.headline_part2 %></td>
        <td><%= ad.description %></td>
        <td><%= ad.final_urls %></td>
        <td><%= ad.path1 %></td>
        <td><%= ad.path2 %></td>
        <td><%= link_to 'Show', ad_path(campaign_id: ad.ad_group_id, ad_group_id: ad.ad_group_id, id: ad.id) %></td>
        <td><%= link_to 'Edit', edit_ad_path(campaign_id: ad.ad_group_id, ad_group_id: ad.ad_group_id, id: ad.id) %></td>
        <td><%= link_to 'Destroy', ad_path(campaign_id: ad.ad_group_id, ad_group_id: ad.ad_group_id, id: ad.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ad', new_ad_path %>
